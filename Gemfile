source 'https://rubygems.org'

# Added by TRB 29 Sep 13
ruby '2.0.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Use sqlite3 as the database for Active Record
# Changed by TRB 29 Sep 13
group :development do
  gem 'sqlite3', '1.3.8'
end

# Use SCSS for stylesheets  by TRB 29 Sep 13
gem 'sass-rails', '4.0.0'

# Use Uglifier as compressor for JavaScript assets by TRB 29 Sep 13
gem 'uglifier', '2.1.1'

# Use CoffeeScript for .js.coffee assets and views by TRB 29 Sep 13
gem 'coffee-rails', '4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library by TRB 29 Sep 13
gem 'jquery-rails', '3.0.4'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks by TRB 29 Sep 13
gem 'turbolinks', '1.1.1'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder by TRB 29 Sep 13
gem 'jbuilder', '1.0.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api. by TRB 29 Sep 13
  gem 'sdoc', '0.3.20', require: false
end

